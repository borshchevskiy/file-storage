<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} [%5p] ${hostName} --- [%15.15t] %-40.40c{1.} : %m%n%ex
        </Property>
    </Properties>
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <RollingFile name="UsersFileAppender" fileName="logs/business/users/users.log"
                     filePattern="logs/business/users/users-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <RollingFile name="FilesFileAppender" fileName="logs/business/files/files.log"
                     filePattern="logs/business/files/files-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <RollingFile name="AppFileAppender" fileName="logs/business/app/app.log"
                     filePattern="logs/business/app/app-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="ru.borshchevskiy.filestorage.service.impl.UserServiceImpl" level="debug" additivity="false">
            <AppenderRef ref="UsersFileAppender"/>
        </Logger>
        <Logger name="ru.borshchevskiy.filestorage.service.impl.FileServiceImpl" level="debug" additivity="false">
            <AppenderRef ref="FilesFileAppender"/>
        </Logger>
        <Logger name="ru.borshchevskiy.filestorage.web.handlers.FilesExceptionHandler" level="debug" additivity="false">
            <AppenderRef ref="FilesFileAppender"/>
        </Logger>
        <Logger name="ru.borshchevskiy.filestorage.config" level="debug" additivity="false">
            <AppenderRef ref="AppFileAppender"/>
        </Logger>
        <Logger name="ru.borshchevskiy.filestorage.web.handlers.GlobalExceptionHandler"
                level="debug" additivity="false">
            <AppenderRef ref="AppFileAppender"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration>