@startuml
title Registration

actor Client as Client

box "Frontend"
participant "Registration Page"
participant "Login Page"
end box
box "Backend"
participant "Controller"
participant "Service"
participant "Repository"
end box

box "Storage"
participant "Database"
end box

Client -> "Registration Page" : submit registration form
"Registration Page" -> Controller : HTTP POST request
Controller -> Service : request
Service -> Repository : request
Repository -> Database : request
activate Database
Database -> Database : create new User
Database -> Repository : response
deactivate Database
Repository -> Service : response
Service -> Controller : response
Controller -> "Registration Page" : HTTP 300 response \n(redirect to login page)
"Registration Page" -> Controller : HTTP GET request
create "Login Page"
Controller -> "Login Page" : response
"Login Page" -> Client : view


@enduml